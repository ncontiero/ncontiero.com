{
  "$schema":
    "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
  "version": "0.2",
  "import": ["@cspell/dict-pt-br/cspell-ext.json"],
  "language": "en, pt, pt-BR",
  "files": ["**/*.{ts,tsx,md,mdx,json}"],
  "enableFiletypes": ["mdx", "github-actions-workflow"],
  "ignoreRegExpList": [
    "#.*?\\)"
  ],
  "dictionaryDefinitions": [
    {
      "name": "project-words",
      "path": "./project-words.txt",
      "addWords": true
    }
  ],
  "dictionaries": ["project-words"],
  "ignorePaths": [
    "node_modules",
    "/project-words.txt",
    "package.json",
    "pnpm-lock.yaml",
    ".next",
    ".vercel",
    ".contentlayer"
  ],
  "caseSensitive": true
}