{
  "name": "ncontiero.com",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.26.0",
  "description": "Bridge to my projects.",
  "author": "Nicolas Contiero <https://github.com/ncontiero>",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently --kill-others --names \"contentlayer,next\" -c \"magenta,black\" \"contentlayer2 dev\" \"next dev\"",
    "build": "contentlayer2 build && next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "pnpm lint --fix",
    "typecheck": "tsc --noEmit",
    "check:spell": "cspell",
    "check:case": "case-police src/data/**/*.{ts,tsx,md,mdx,json} src/i18n/**/*.{ts,tsx,md,mdx,json}",
    "check": "pnpm lint && pnpm typecheck && pnpm check:spell && pnpm check:case",
    "prepare": "husky",
    "commitlint": "commitlint --edit",
    "pre-commit": "lint-staged",
    "postinstall": "next typegen"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@t3-oss/env-nextjs": "^0.13.10",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "contentlayer2": "^0.5.8",
    "framer-motion": "^12.23.26",
    "lucide-react": "^0.561.0",
    "next": "16.0.10",
    "next-contentlayer2": "^0.5.8",
    "next-intl": "^4.6.0",
    "next-themes": "^0.4.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-hook-form": "^7.68.0",
    "react-toastify": "^11.0.5",
    "shiki": "^3.20.0",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@cspell/dict-pt-br": "^2.4.2",
    "@ncontiero/eslint-config": "6.5.2",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^24.10.4",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "case-police": "2.1.1",
    "concurrently": "^9.2.1",
    "cspell": "9.4.0",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "rehype-pretty-code": "^0.14.1",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=22"
  },
  "lint-staged": {
    "*": "pnpm lint:fix"
  }
}
